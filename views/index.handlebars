<div class="container d-flex flex-column align-items-center mt-5">
  <h1 class="title" style="font-weight: bold; color: rgb(250, 250, 239);">你想對誰說幹話？</h1>
  <div class="form-container mt-3">
    <form action="/" method="POST">
      <div class="row d-flex justify-content-between">
        {{#each characters}}
        <div class="card col-sm-3 ms-3" style="width: 18rem;">
          <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="height: 200px;">
          <div class="card-body d-flex justify-content-center">
            <label class="form-check-label" for="name">{{this.title}}</label>
            <input type="checkbox" class="form-check-input ms-1" id="{{this.title}}" name="{{this.name}}">
          </div>
        </div>
        {{/each}}
      </div>
      <div class="row d-flex justify-content-between align-items-center mt-5">
        <div class="col-sm-2">
          <button type="submit" class="btn btn-success">來一句吧！</button>
        </div>
        <div class="col-sm-10">
          <textarea class="form-control col-sm-10" id="gibberish" rows="3"
            style="color: rgb(27, 78, 136); font-weight: bold;">{{gibberish}}</textarea>
        </div>
      </div>
    </form>
  </div>
</div>